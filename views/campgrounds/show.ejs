<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show</title>
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
        }
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Campgrounds show...</h1>
    <div>
        <h5><%= campground.title %></h3>
        <h6><%= campground.location %></h6>
        <div>
            <button id="editCampgroundButton">Edit campground</button>

            <div id="editCampgroundModal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h2>Edit this Campground</h2>
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" value="<%= campground.title %>" required><br><br>
                        <label for="location">Location:</label>
                        <input type="text" id="location" name="location" value="<%= campground.location %>" required><br><br>
                        <label for="description">Description:</label>
                        <textarea id="description" name="description" aria-valuetext="<%= campground.description %>" required></textarea><br><br>
                        <label for="price">Price:</label>
                        <input type="text" id="price" name="price" value="<%= campground.price %>" required><br><br>
                        <button type="submit">Edit Campground</button> 
                    </form>
                </div>
            </div>

        </div>
        <% if (typeof query.update !== 'undefined' && query.update === 'success') { %>
            <script>alert('Campground updated successfully!');</script>
        <% } %>
            
    </div>
    <br>
    <br>
    <footer>
        <button onclick="goBack()">Click to go back</button>
    </footer>

    <script>
        function goBack() {
            window.location.href = '/campgrounds';
        }

        // function editCampground(){
        //     const id = this.campground.id;
        //     const camp = Campground.findById(id);
        //     this.
        // }

        var modal = document.getElementById("editCampgroundModal");

        var btn = document.getElementById("editCampgroundButton");

        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        
    </script>
</body>
</html>